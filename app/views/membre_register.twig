<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stampee - Inscription</title>
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/variables.css">
    <link rel="stylesheet" href="/css/utilities.css">
    <link rel="stylesheet" href="/css/button.css">
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/responsive.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
    <link rel="icon" href="/img/favicon/favicon.ico" sizes="any">
</head>
<body>
    <div class="register-container">
        <div class="register-form">
            <div class="register-header">
                <h1 class="register-title">Stampee</h1>
                <div class="register-subtitle">Gérez votre collection de timbres</div>
            </div>

            {% if errors.message %}
                <div class="error-message">
                    {{ errors.message }}
                </div>
            {% endif %}

            <form id="registerForm" action="/register" method="post" novalidate>
                <div class="form-group">
                    <label for="nom_utilisateur" class="form-label">Nom d'utilisateur *</label>
                    <input type="text" id="nom_utilisateur" name="nom_utilisateur" 
                           value="{{ old.nom_utilisateur ?? '' }}" 
                           class="form-input" required minlength="3" maxlength="50">
                    <div class="error-message" id="username-error"></div>
                </div>

                <div class="form-group">
                    <label for="courriel" class="form-label">Adresse e-mail *</label>
                    <input type="email" id="courriel" name="courriel" 
                           value="{{ old.courriel ?? '' }}" 
                           class="form-input" required>
                    <div class="error-message" id="email-error"></div>
                </div>

                <div class="form-group">
                    <label for="mot_de_passe" class="form-label">Mot de passe *</label>
                    <input type="password" id="mot_de_passe" name="mot_de_passe" 
                           class="form-input" required minlength="8">
                    <div class="error-message" id="password-error"></div>
                </div>

                <div class="form-group">
                    <label for="confirmation_mot_de_passe" class="form-label">Confirmer le mot de passe *</label>
                    <input type="password" id="confirmation_mot_de_passe" name="confirmation_mot_de_passe" 
                           class="form-input" required>
                    <div class="error-message" id="confirm-password-error"></div>
                </div>

                <button type="submit" class="btn btn--primary btn--full" id="submitBtn">Créer mon compte</button>
            </form>

            <div class="login-link">
                Déjà un compte ? <a href="login">Connectez-vous ici</a>
            </div>
        </div>
    </div>

    <script>
        // Simple form validation for debugging
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('registerForm');
            const submitBtn = document.getElementById('submitBtn');
            
            console.log('Form loaded:', form);
            console.log('Submit button:', submitBtn);
            
            form.addEventListener('submit', function(e) {
                console.log('Form submit event triggered');
                
                // Basic validation
                const username = document.getElementById('nom_utilisateur').value.trim();
                const email = document.getElementById('courriel').value.trim();
                const password = document.getElementById('mot_de_passe').value;
                const confirmPassword = document.getElementById('confirmation_mot_de_passe').value;
                
                console.log('Form data:', { username, email, password, confirmPassword });
                
                if (!username || !email || !password || !confirmPassword) {
                    e.preventDefault();
                    alert('Veuillez remplir tous les champs obligatoires.');
                    return;
                }
                
                if (password !== confirmPassword) {
                    e.preventDefault();
                    alert('Les mots de passe ne correspondent pas.');
                    return;
                }
                
                if (password.length < 8) {
                    e.preventDefault();
                    alert('Le mot de passe doit avoir au moins 8 caractères.');
                    return;
                }
                
                console.log('Form validation passed, submitting...');
                submitBtn.disabled = true;
                submitBtn.textContent = 'Création du compte...';
            });
        });
    </script>
</body>
</html>
