                {% if session.authenticated %}
                    <a href="/projetweb1/public/auctions/create" class="btn btn--primary">Cr√©er une Ench√®re</a>
                {% endif %}
            </div>


            <div class="quick-search">
                <form method="GET" action="/projetweb1/public/auctions/search" class="search-form">
                    <div class="search-row">
                        <input type="text" name="recherche" placeholder="Rechercher des timbres..." class="search-input">
                        <button type="submit" class="btn btn--primary">Rechercher</button>
                    </div>
                </form>
            </div>


            {% if auctions %}
                <div class="auctions-grid">
                    {% for auction in auctions %}
                    <div class="auction-card">
                        <div class="auction-card__image">
                            {% if auction.image_principale %}
                                <img src="/projetweb1/{{ auction.image_principale }}" alt="{{ auction.nom }}" class="auction-image">
                            {% else %}
                                <div class="auction-card__no-image">
                                    <span class="no-image-icon">üñºÔ∏è</span>
                                    <span class="no-image-text">Aucune image</span>
                                </div>
                            {% endif %}
                            {% if auction.coup_de_coeur_lord %}
                                <div class="auction-card__badge">‚≠ê Coup de C≈ìur</div>
                            {% endif %}
                            
    
                            {% if session.authenticated and session.user_id == 20 %}
                                <button class="lord-favorite-toggle" 
                                        data-auction-id="{{ auction.id_enchere }}"
                                        data-current-status="{{ auction.coup_de_coeur_lord ? '1' : '0' }}"
                                        title="Toggle Coup de C≈ìur du Lord">
                                    {% if auction.coup_de_coeur_lord %}
                                        üóëÔ∏è
                                    {% else %}
                                        ‚≠ê
                                    {% endif %}
                                </button>
                            {% endif %}
                        </div>
                        <div class="auction-card__content">
                            <h3 class="auction-card__title">{{ auction.nom }}</h3>
                            <p class="auction-card__country">{{ auction.pays_origine }}</p>
                            <p class="auction-card__condition">{{ auction.condition }}</p>
                            <p class="auction-card__price">
                                <span class="price-label">{% if auction.prix_actuel and auction.prix_actuel > 0 %}Prix Actuel{% else %}Prix de D√©part{% endif %}</span>
                                <span class="current-price">
                                    {% if auction.prix_actuel and auction.prix_actuel > 0 %}{{ auction.prix_actuel }}{% else %}{{ auction.prix_plancher }}{% endif %} $
                                    {% if auction.prix_actuel and auction.prix_actuel > auction.prix_plancher %}
                                        <span class="price-indicator">‚Üë</span>
                                    {% endif %}
                                </span>
                                <span class="starting-price">Prix de d√©part: {{ auction.prix_plancher }} $</span>
                            </p>
                            <p class="auction-card__ending">Se termine le {{ auction.date_fin|date('d/m/Y H:i') }}</p>
                            <p class="auction-card__bids">
                                {% if auction.nombre_offres > 0 %}
                                    <span class="bid-count active">{{ auction.nombre_offres }} offre(s)</span>
                                {% else %}
                                    <span class="bid-count">Aucune offre</span>
                                {% endif %}
                            </p>
                            <div class="auction-card__actions">
