                                {% if session.authenticated and session.user_id == auction.id_membre %}
                                    <div class="owner-actions">
                                        <a href="/projetweb1/public/auctions/{{ auction.id_enchere }}/edit" class="btn btn--secondary">‚úèÔ∏è Modifier</a>
