                                </select>
                            </div>
                            <div class="search-field">
                                <input type="number" name="prix_min" value="{{ filters.prix_min }}" placeholder="Prix min" class="search-input">
                            </div>
                            <div class="search-field">
                                <input type="number" name="prix_max" value="{{ filters.prix_max }}" placeholder="Prix max" class="search-input">
                            </div>
                            <button type="submit" class="btn btn--primary">Filtrer</button>
                        </div>
                    </form>
                </div>
            </div>

    
            <div class="results-count">
