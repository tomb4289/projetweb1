        </div>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Mobile navigation toggle
            const navToggle = document.querySelector('.header__nav-toggle');
            const navList = document.querySelector('.header__nav-list');
            
            if (navToggle && navList) {
                navToggle.addEventListener('click', function() {
                    navList.classList.toggle('active');
                    this.classList.toggle('active');
                });
            }
            
            // User dropdown functionality
            const userDropdown = document.querySelector('.header__user-dropdown');
            const userBtn = document.querySelector('.header__user-btn');
            const dropdownMenu = document.querySelector('.header__dropdown-menu');
            
            if (userDropdown && userBtn && dropdownMenu) {
                // Toggle dropdown on click for mobile
                userBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    dropdownMenu.classList.toggle('active');
                });
                
                // Close dropdown when clicking outside
                document.addEventListener('click', function(e) {
                    if (!userDropdown.contains(e.target)) {
                        dropdownMenu.classList.remove('active');
                    }
                });
                
                // Handle window resize to reset dropdown state
                window.addEventListener('resize', function() {
                    if (window.innerWidth > 768) {
                        dropdownMenu.classList.remove('active');
                    }
                });
            }

            // Delete auction functionality
            const deleteButtons = document.querySelectorAll('.delete-auction-btn');
            deleteButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const auctionId = this.dataset.auctionId;
                    
                    if (confirm('√ätes-vous s√ªr de vouloir supprimer cette ench√®re ? Cette action est irr√©versible.')) {
                        fetch(`/projetweb2/public/auctions/${auctionId}/delete`, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            }
                        })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                alert(data.message);
                                location.reload();
                            } else {
                                alert('Erreur: ' + data.error);
                                location.reload();
                            }
                        })
                        .catch(error => {
                            console.error('Error:', error);
                            alert('Erreur lors de la suppression de l\'ench√®re');
                        });
                    }
                });
            });
            
            // Auction actions popup functionality
            const auctionActionsBtns = document.querySelectorAll('.auction-actions-btn');
            auctionActionsBtns.forEach(button => {
                button.addEventListener('click', function() {
                    const auctionId = this.dataset.auctionId;
                    const auctionName = this.dataset.auctionName;
                    const isOwner = this.dataset.isOwner === '1';
                    const isAdmin = this.dataset.isAdmin === '1';
                    
                    // Create popup content based on user permissions
                    let popupContent = `<div class="auction-actions-popup">`;
                    popupContent += `<h4>Actions pour "${auctionName}"</h4>`;
                    popupContent += `<div class="popup-actions-grid">`;
                    
                    if (isOwner) {
                        popupContent += `
                            <a href="/projetweb2/public/auctions/${auctionId}/edit" class="btn btn--secondary popup-action-btn">
                                ‚úèÔ∏è Modifier l'Ench√®re
                            </a>
                            <button class="btn btn--danger popup-action-btn delete-auction-popup-btn" data-auction-id="${auctionId}">
                                üóëÔ∏è Supprimer l'Ench√®re
                            </button>
                        `;
                    }
                    
                    if (isAdmin) {
                        popupContent += `
                            <button class="btn btn--danger popup-action-btn admin-delete-auction-btn" data-auction-id="${auctionId}" title="Admin: Supprimer cette ench√®re">
                                üóëÔ∏è Admin Delete
                            </button>
                        `;
                    }
                    
                    popupContent += `</div></div>`;
                    
                    // Create and show the popup
                    const popup = window.PopupSystem.createPopup({
                        title: 'Actions de l\'Ench√®re',
                        content: popupContent,
                        size: 'small',
                        closeable: true
                    });
                    
                    // Add event listeners for popup buttons
                    const deleteBtn = popup.querySelector('.delete-auction-popup-btn');
                    const adminDeleteBtn = popup.querySelector('.admin-delete-auction-btn');
                    
                    if (deleteBtn) {
                        deleteBtn.addEventListener('click', function() {
                            if (confirm('√ätes-vous s√ªr de vouloir supprimer cette ench√®re ? Cette action est irr√©versible.')) {
                                deleteAuction(auctionId);
                                window.PopupSystem.closePopup(popup);
                            }
                        });
                    }
                    
                    if (adminDeleteBtn) {
                        adminDeleteBtn.addEventListener('click', function() {
                            if (confirm('√ätes-vous s√ªr de vouloir supprimer cette ench√®re en tant qu\'administrateur ? Cette action est irr√©versible.')) {
                                deleteAuction(auctionId);
                                window.PopupSystem.closePopup(popup);
                            }
                        });
                    }
                });
            });
            
            // Countdown timer functionality for auction cards
            const countdownTimers = document.querySelectorAll('.countdown-timer-card');
            countdownTimers.forEach(function(timer) {
                const endDateStr = timer.dataset.end;
                const endDate = new Date(endDateStr).getTime();
                
                function updateCardCountdown() {
                    const now = new Date().getTime();
                    const distance = endDate - now;
                    
                    if (distance < 0) {
                        // Auction has ended
                        timer.innerHTML = '<span class="auction-ended">Ench√®re termin√©e</span>';
                        return;
                    }
                    
                    // Calculate time units
                    const days = Math.floor(distance / (1000 * 60 * 60 * 24));
                    const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                    const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                    
                    // Update display
                    timer.querySelector('.countdown-days').textContent = days;
                    timer.querySelector('.countdown-hours').textContent = hours.toString().padStart(2, '0');
                    timer.querySelector('.countdown-minutes').textContent = minutes.toString().padStart(2, '0');
                    
                    // Add urgency styling for last 24 hours
                    if (distance < 24 * 60 * 60 * 1000) {
                        timer.classList.add('urgent');
                    }
                    
                    // Add critical styling for last 1 hour
                    if (distance < 60 * 60 * 1000) {
                        timer.classList.add('critical');
                    }
                }
                
                // Update countdown every minute
                updateCardCountdown();
                setInterval(updateCardCountdown, 60000);
            });
        });
    </script>
</body>
